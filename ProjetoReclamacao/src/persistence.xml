<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="projetoModel">
		<!-- provedor/implementacao do JPA -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- entidade mapeada -->
		<class>br.gov.projeto.model.Area</class>
		<class>br.gov.projeto.model.Comentario</class>
		<class>br.gov.projeto.model.Contato</class>
		<class>br.gov.projeto.model.Endereco</class>
		<class>br.gov.projeto.model.Postagem</class>
		<class>br.gov.projeto.model.TipoPostagem</class>
		<class>br.gov.projeto.model.Usuario</class>
		<properties>
			<!-- dados da conexao foram migrados para o spring-context.xml na configuracao 
				do datasource -->
			<!-- propriedades do hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<!-- atualiza o banco, gera as tabelas se for preciso -->
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>
</persistence>